{
  "build": {
    "command": "npm run build",
    "publishDir": "dist"
  },
  "run": {
    "command": "npm run build && npm start"
  },
  "env": {
    "NODE_ENV": "production"
  },
  "healthCheck": {
    "path": "/health",
    "port": 5000
  },
  "scaling": {
    "minInstances": 1,
    "maxInstances": 10
  }
}